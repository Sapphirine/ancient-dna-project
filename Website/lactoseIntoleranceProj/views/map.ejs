<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Map</title>

    <!-- leaflet -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />
    <script
      src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
      integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
      crossorigin=""
    ></script>

    <!-- boostrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <!-- leaflet cluster -->
    <script src="https://cdn.jsdelivr.net/npm/d3@7"></script>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet.markercluster@1.1.0/dist/MarkerCluster.css"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet.markercluster@1.1.0/dist/MarkerCluster.Default.css"
    />
    <script src="https://unpkg.com/leaflet.markercluster@1.1.0/dist/leaflet.markercluster.js"></script>

    <!-- nouislider -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.8.1/nouislider.css"
      rel="stylesheet"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.8.1/nouislider.js"></script>

    <!-- leaflet control select -->
    <link
      href="https://cdn.jsdelivr.net/gh/adammertel/Leaflet.Control.Select@74a2a9ac5f5471ef17117cf9ac1e6d78986eda0f/dist/leaflet.control.select.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/gh/adammertel/Leaflet.Control.Select@74a2a9ac5f5471ef17117cf9ac1e6d78986eda0f/dist/leaflet.control.select.src.js"></script>

    <style>
      #map {
        height: 400px;
      }

      #slider {
        margin-top: 100px;
      }
    </style>
  </head>

  <body>
    <h1>Map</h1>
    <div id="map"></div>
    <div id="slider"></div>

    <script>
      // create map
      const map = L.map("map").setView([30, 0], 2);

      L.tileLayer("https://tile.openstreetmap.org/{z}/{x}/{y}.png", {
        maxZoom: 19,
        attribution:
          '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>',
      }).addTo(map);

      const markers = L.markerClusterGroup();

      // add data to the map
      d3.json("/ancientHumanData.json")
        .then((data) => {
          data.elements.forEach((d) => {
            const latitude = +d.Latitude;
            const longitude = +d.Longitude;

            if (!isNaN(latitude) && !isNaN(longitude)) {
              const marker = L.marker([latitude, longitude]);
              markers.addLayer(marker);
            }
          });
          map.addLayer(markers);
        })
        .catch((error) => {
          console.error(error);
        });

      // add SNP panel
      var items = [
        { label: "sunny", value: "â˜¼" },
        { label: "half-sunny", value: "ðŸŒ¤" },
        { label: "half-raining", value: "ðŸŒ¦" },
        { label: "raining", value: "ðŸŒ¨" },
        { label: "tornado", value: "ðŸŒª" },
      ];
      L.control
        .select({
          position: "topleft",
          items: items,
        })
        .addTo(map);

      // create timeline
      var slider = document.getElementById("slider");

      noUiSlider.create(slider, {
        start: [20, 80],
        connect: true,
        range: {
          min: 0,
          max: 100,
        },
      });
    </script>
  </body>
</html>
